#### COMMANDS
deploy-lambda() {
  if [ -n "$1" ] ; then
    function_name=$1
  else
    function_name=${PWD##*/}
  fi
  zip -r deploy.zip * && aws lambda update-function-code --function-name $function_name --zip-file fileb://./deploy.zip && rm deploy.zip
}

