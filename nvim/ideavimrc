set NERDTree 
set vim-easymotion
set commentary
set multiple-cursors
set surround
set visualbell

# start commentary
source ~/.dotfiles/nvim/init_ideavim.vim
map <Leader>c<space> <Action>(CommentByLineComment)
# end commentary

# start multiple-cursors
map <C-N> <A-N>
map <C-P> <A-P>
map <C-X> <A-X>
map g<C-N> g<A-N>

map <C-N> <Plug>(multicursor-ms/)
map <C-P> <Plug>(multicursor-mcv)
map <C-X> <Plug>(multicursor-mcr)
map g<C-N> g<Plug>(multicursor-ms/)
# end multiple-cursors

