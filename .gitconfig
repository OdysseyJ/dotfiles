[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[remote "origin"]
    fetch = +refs/heads/*:refs/remotes/origin/*
    +url = git@github.com:scubedoo187/dotfiles.git

[color "status"]
    added = green
    changed = red bold
    untracked = magenta bold

[color "branch"]
    remote = yellow

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    rb = rebase origin/master
    unstage = reset HEAD --
    last = log -1 HEAD
    log1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset)%C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'%--all
    log2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    meld = !~/git-meld.pl
    df = difftool

[user]
    email = scubedoo187@gmail.com
    name = YGJung

[diff]
    tool = meld

[difftool]
    prompt = false

[push]
    default = simple

[merge]
    tool = vimdiff
